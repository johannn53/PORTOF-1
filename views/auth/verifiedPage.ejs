<html>
  <head>
    <link href="/css/verifiedPage.css" rel="stylesheet" type="text/css" />
    <body>
      <h1 id="response"></h1>
      <div class="form">
        <div class="formLogin">
          <img src="/image/verifLogo.png" height="250px" width="auto" />
          <h1 class="textLogin" style="font-size: 20px">
            Success Verified Account!!!
          </h1>
          <br />
          <h2 class="textLogin" style="font-size: 15px">Direct Login Below</h2>
          <form action="/login" method="post">
            <div>
              <label>Name</label><br />
              <input
                type="text"
                name="name"
                placeholder="Name"
                size="35px"
                style="border-radius: 10px"
              />
            </div>
            <br />
            <div>
              <label>Password</label>
              <br />
              <input
                type="password"
                name="password"
                placeholder="Password"
                size="35px"
                style="border-radius: 10px"
              />
              <br />
            </div>
            <br />
            <input type="submit" id="submit" value="Login" />
          </form>
        </div>
      </div>
    </body>
  </head>
</html>
